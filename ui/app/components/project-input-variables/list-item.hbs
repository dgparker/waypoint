<li>
  {{#if (or this.isEditing this.isCreating)}}
    <form class="pds-form" {{on "submit" this.saveVariableSettings}}>
      <div part="fields" class="card">
        <div class="card-header">
          <h4>{{t "form.project_settings.variables.title"}}</h4>
        </div>
        <fieldset class="pds-formFieldSet">
          <div class="pds-formField">
            <label for="input-variable-name" class="pds-fieldName">
              {{t "form.project_settings.variables.variable_name"}}
            </label>
            <Pds::Input
              @type="text"
              id="input-variable-name"
              placeholder={{t "form.project_settings.variables.variable_name_placeholder"}}
              value={{this.activeVariable.name}}
            />
          </div>
          <div class="pds-formField">
            <label for="input-variable-value" class="pds-fieldName">
              {{t "form.project_settings.variables.variable_value"}}
            </label>
            <Pds::Input
              @type="text"
              id="input-variable-value"
              placeholder={{t "form.project_settings.variables.variable_value_placeholder"}}
              value={{this.activeVariable.str}}
            />
            <input type="checkbox" id="input-variable-hcl"><label for="input-variable-hcl">HCL</label>
          </div>
        </fieldset>
        <div class="card-footer">
          <Pds::ButtonSet>
            <Pds::Button @variant="primary" @type="submit">{{t "form.project_settings.variables.button_submit"}}</Pds::Button>
            <Pds::Button @variant="secondary" {{on "click" this.cancelCreate}}>{{t "form.project_settings.variables.button_cancel"}}</Pds::Button>
          </Pds::ButtonSet>
        </div>
      </div>
    </form>
  {{else}}
    <div class="project-input-variables--list-item">
      <span class="project-input-variables--list-item-name">{{this.variable.name}}</span>
      <span class="project-input-variables--list-item-value">
        {{#if this.variable.str}}
          {{this.variable.str}}
        {{else}}
          {{this.variable.hcl}}
        {{/if}}

      </span>
      <Pds::Dropdown as |D|>
        <D.Trigger>
          Actions
        </D.Trigger>
        <D.Dialog>
          <section>
            <Pds::Button @variant="secondary" {{on "click" (fn this.editVariable this.variable)}}>
              Edit
            </Pds::Button>
            <Pds::Button @variant="warning" {{on "click" (fn this.deleteVariable this.variable)}}>
              Delete
            </Pds::Button>
          </section>
        </D.Dialog>
      </Pds::Dropdown>
    </div>
  {{/if}}
</li>
