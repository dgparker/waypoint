
{{this.variablesList.length}}
<ul>
  {{#each this.variablesList as |variable|}}
    <ProjectInputVariables::ListItem @variable={{variable}} @isEditing={{eq variable this.activeVariable}}/>
  {{else}}
    <Pds::EmptyState as |P|>
      <P.Header>No variables defined</P.Header>
    </Pds::EmptyState>
  {{/each}}
</ul>

<Pds::Button @variant="primary" {{on "click" this.addVariable}}><Pds::Icon @type="plus-plain"/>Add Variable</Pds::Button>
